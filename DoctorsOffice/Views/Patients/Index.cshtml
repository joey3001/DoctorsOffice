@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Patient>;

<h1>Patients</h1>

@if (@Model.Count == 0)
{
  <h3>No patients have been added yet!</h3>
} 

@foreach (Patient patient in Model)
{
  <li>@Html.ActionLink($"{patient.Name}", "Details", new { id = patient.PatientId })</li>
}

<p>@Html.ActionLink("Add new patient", "Create")</p> @* First is language of link, second is view, third is controller, since there's no controller specified it defaults to the current controller.  *@
<p>@Html.ActionLink("Home", "Index", "Home")</p>