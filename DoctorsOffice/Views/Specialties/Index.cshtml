@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Specialty>;

<h1>Specialties</h1>

@if (@Model.Count == 0)
{
  <h3>No specialties have been added yet!</h3>
} 

@foreach (Specialty specialty in Model)
{
  <li>@Html.ActionLink($"{specialty.Field}", "Details", new { id = specialty.SpecialtyId })</li>
}

<p>@Html.ActionLink("Add new specialty", "Create")</p> @* First is language of link, second is view, third is controller, since there's no controller specified it defaults to the current controller.  *@
<p>@Html.ActionLink("Home", "Index", "Home")</p>