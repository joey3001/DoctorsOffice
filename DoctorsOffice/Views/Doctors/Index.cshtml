@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@using Microsoft.EntityFrameworkCore;
@using Microsoft.AspNetCore.Mvc.Rendering;
@model List<DoctorsOffice.Models.Doctor>;
@using DoctorsOffice.Controllers;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No Doctors have been added yet!</h3>
} 

@foreach (Doctor doctor in Model)
{
  <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</li>
  <li>@($"{doctor.Patients.Count}")</li>
}

<p>@Html.ActionLink("Add new doctor", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>